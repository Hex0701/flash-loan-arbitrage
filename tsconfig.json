{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "scripts",
    "test",
    "hardhat.config.ts",
    "contracts/**/*.sol"
  ],
  "exclude": [
    "node_modules"
  ]
}